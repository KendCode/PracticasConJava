package vectores;
import java.util.Scanner;
public class Vector 
{
	public void llenarVector(int N, int [] V)
	{
		Scanner leer = new Scanner (System.in);
		for(int i = 0; i < N; i++)
		{
			System.out.print(" V[" + i + "] : ");
			V[i] = leer.nextInt();
		}
	}
	
	public void llenarVector2(int N, int[] V)
	{
		for(int i = 0; i < N; i++)
			V[i] = (int) (Math.random() * 100);
	}
	
	public void mostrarVector(int N, int[] V)
	{
		System.out.print("\n El vector es: \n");
		for (int i=0; i < N; i++)
			System.out.print(V[i] + " | ");
	}
	
	//FUNCION PARA INVERTIR UN NUMERO PARA CAPICUA
	public int invertir(int N)
	{
	
		int nuevo = 0, d;
	
		while(N > 0)
		{
			d = N % 10;
			N /= 10;
			nuevo = (nuevo*10)+d;
		}
		return nuevo;
	}
	
	public static int seriePrimos(int posi)
	{
		int a = 2, c=1;
		while(c < posi)
		{
			a++;
			if(esPrimo(a))
				c++;
		}
		return(a);
	}
	
	/*public static boolean esPrimo(int a)
	{
		int i;
		boolean R;
		R = true;
		for(i = 2; i<= Math.sqrt(a); i++){
			if(a % i == 0){
				R = false;
				break;
			}
		}
		return R;
	}*/
	public static int contarPrimos(int N, int[] V) {
	    int count = 0;
	    for (int i = 0; i < N; i++) {
	        if (esPrimo(V[i])) {
	            count++;
	        }
	    }
	    return count;
	}

	public static boolean esPrimo(int a) {
        if (a <= 1) {
            return false;
        }
        for (int i = 2; i <= Math.sqrt(a); i++) {
            if (a % i == 0) {
                return false;
            }
        }
        return true;
    }

	public void llenarPrimos(int N, int[] V) {
	    int numero = 2; // Comenzamos con el primer número primo
	    int cantidadEncontrados = 0;

	    while (cantidadEncontrados < N) {
	        if (esPrimo(numero)) {
	            V[cantidadEncontrados] = numero;
	            cantidadEncontrados++;
	        }
	        numero++;
	    }
	}


	/*private boolean esPrimo(int num) {
	    if (num <= 1) {
	        return false;
	    }
	    if (num <= 3) {
	        return true;
	    }
	    if (num % 2 == 0 || num % 3 == 0) {
	        return false;
